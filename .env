# Telegram Bot Configuration
# ==========================

# Bot token from @BotFather - REQUIRED
BOT_TOKEN=your_bot_token_here

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Spam Detection Settings
# -----------------------
# Max messages per minute before triggering flood detection
FLOOD_LIMIT=5

# Number of similar messages before considering it spam
SPAM_THRESHOLD=3

# Similarity threshold (0.0 to 1.0) for message comparison
MESSAGE_SIMILARITY_THRESHOLD=0.8

# Default mute duration in seconds (300 = 5 minutes)
DEFAULT_MUTE_DURATION=300

# Content Filtering Settings
# --------------------------
# Enable media filtering (true/false)
ENABLE_MEDIA_FILTERING=true

# Enable link filtering (true/false)
ENABLE_LINK_FILTERING=true

# Enable banned words filtering (true/false)
ENABLE_BANNED_WORDS=true

# Captcha Settings
# ----------------
# Captcha timeout in seconds
CAPTCHA_TIMEOUT=300

# Captcha difficulty level (easy, medium, hard)
CAPTCHA_DIFFICULTY=medium

# Channel Subscription Requirements
# ---------------------------------
# Required channel username without @ (leave empty to disable)
# For multiple channels, separate with commas: channel1,channel2,channel3
REQUIRED_CHANNEL=

# Enable channel subscription checking (true/false)
CHECK_SUBSCRIPTION=false

# External Logging
# ----------------
# Channel ID for logging (leave empty to disable)
LOG_CHANNEL_ID=

# Enable external logging to channel (true/false)
ENABLE_EXTERNAL_LOGGING=false

# Warning System
# --------------
# Maximum warnings before permanent ban
MAX_WARNINGS=3

# Data Storage
# ------------
# Data directory path (relative to bot root)
DATA_DIR=data

# File names for data storage
USERS_FILE=users.json
GROUPS_FILE=groups.json
SPAM_DATA_FILE=spam_data.json
